{% extends "base.html.twig" %}
{% block title%}
    Gestion des listes
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div>
    <div class="pull-right">
    </div>
    <h1>Tache de la {{ listeDetails.Nom}}
        <a href ="{{ path('tache-ajout') }}" class ="btn btn-sm btn-success" style="float: right;">
            <i class ="glyphicon glyphicon-edit" >
            Ajouter une Tache
            </i>
        </a>
    </h1>

    <hr />
    <table id="table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th style="border-top:0px solid black; padding-left: 9px; text-align: center;">Nom</th>
                <th style="border-top:0px solid black; padding-left: 9px; text-align: center;">Statut</th>
                <th style="border-top:0px solid black; padding-left: 9px; text-align: center;">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {% for tache in listeDetails.Tache %}
                <td style="text-align: center;">{{ tache.Nom }}</td>
                <td style="text-align: center;">{{ tache.Statut }}</td>
                <td style="text-align: center;">
                    <a class="suppression btn btn-danger btn-sm" style="text-align: center;">
                        <i class ="glyphicon glyphicon-chevron-left"></i>
                        Supprimer la tache
                    </a>
                    <a class="btn btn-primary btn-sm" href="#" style="text-align: center;">
                        <i class ="glyphicon glyphicon-chevron-left"></i>
                        Modifier la tache
                    </a>
                </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}